<tool id="ingest-ckan" name="Ingest CKAN Resource" version="0.1.0" profile="22.05">
    <description>Turns a CKAN resource ID into a file usable in Galaxy.</description>
    <creator>
        <person name="John Duggan"/>
        <organization url="https://www.ornl.gov/" name="ORNL"/>
    </creator>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/armada/ckan_utils:0.1.0</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python -m ckan_utils.ingest $resource_id $output_file \$GALAXY_TOOL_USER > >(tee -a $output) 2> >(tee -a $output >&2)
    ]]></command>
    <inputs>
        <param name="resource_id" type="text" label="CKAN Resource ID" />
    </inputs>
    <outputs>
        <data format="txt" name="output" label="CKAN Ingest"></data>
        <data name="output_file" label="Galaxy file" />
    </outputs>
    <help><![CDATA[
        Registers CKAN resources in Galaxy.
    ]]></help>
</tool>
