<tool id="ingest-ckan" name="Ingest CKAN Resource" version="0.2.7" profile="22.05">
    <description>Turns a CKAN resource ID into a file usable in Galaxy.</description>
    <creator>
        <person name="John Duggan"/>
        <organization url="https://www.ornl.gov/" name="ORNL"/>
    </creator>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/armada/galaxy/tool-sources/armada/ckan-utilities:0.2.7</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python -m ckan_utils.ingest "$resource" "$output_file" > >(tee -a $output) 2> >(tee -a $output >&2)
    ]]></command>
    <inputs>
        <param name="resource" type="text" optional="false" label="CKAN Resource ID or URL" />
        <param name="filename" type="text" optional="false" value="Ingested File" label="Dataset name in Galaxy" />
    </inputs>
    <outputs>
        <data format="txt" name="output" label="CKAN Ingest"></data>
        <data name="output_file" auto_format="true" label="$params.filename" />
    </outputs>
    <help><![CDATA[
        Registers CKAN resources in Galaxy.
    ]]></help>
</tool>
