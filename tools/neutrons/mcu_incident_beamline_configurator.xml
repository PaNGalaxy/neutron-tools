<tool id="neutrons_mcu_ibc" name="Incident Beamline Configurator" version="0.0.1">
  <description></description>
    <requirements>
	<requirement type="package" version="3.6">python</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    	docker run
    	    -v $data:/input/data.nxs.h5
    	    -v $instrument_template:/input/instrument_pv.json
    	    code.ornl.gov:4567/ndip/tool-containers/mcu/incident_beamline_configurator
	    > $output
    ]]></command>
    <inputs>
        <param name="data" type="data" format="h5" optional="false" label="Data File"/>
        <param name="instrument_template"  type="data" format="json" optional="false" label="Instrument Template File"/>
    </inputs>
    <outputs>
		<data format="txt" name="output">
    	</data>
    </outputs>
    <help><![CDATA[
A tool to prepare input for incident beamline simulations from experimental data
]]></help>
</tool>

