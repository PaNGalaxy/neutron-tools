<tool id="neutrons_trame_neuxtalviz" tool_type="interactive" name="NeuXtalViz" profile="22.05" version="0.1.0">
    <description></description>
    <requirements>
        <resource type="cuda_device_count_min">1</resource>
        <container type="docker" shell="/bin/bash">ghcr.io/evilkermit/neuxtalviz:0.1.0</container>
    </requirements>
    <entry_points>
        <entry_point name="Trame NeuXtalViz" label="neuxtalviz" requires_domain="False" requires_path_in_url="True">
            <port>8081</port>
        </entry_point>
    </entry_points>
    <environment_variables>
        <environment_variable name="GALAXY_URL">$__galaxy_url__</environment_variable>
        <environment_variable name="GALAXY_API_KEY" inject="api_key"/>
        <environment_variable name="HISTORY_ID">$__history_id__</environment_variable>
        <environment_variable name="EP_PATH" inject="entry_point_path_for_label">neuxtalviz</environment_variable>
    </environment_variables>
    <command detect_errors="exit_code"><![CDATA[
        cd /src && supervisord > >(tee -a $output) 2> >(tee -a $output >&2)
    ]]></command>
    <outputs>
        <data format="txt" name="output" label="Console output">
        </data>
    </outputs>
    <help><![CDATA[
        Starts the Trame version of NeuXtalViz.
    ]]></help>
</tool>
