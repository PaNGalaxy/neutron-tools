<tool id="neutrons-mcvine" name="MCVine" version="0.1.0" profile="22.01">
    <description>MCVine Tool</description>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/ndip/tool-sources/chemical-spectroscopy/sunny:0.1.0</container>
    </requirements>
     <command><![CDATA[
  		#for $input in $inputs
			#set $out_name = $input.element_identifier + ".h5"
			echo $out_name >(tee -a $output >&2) &&
		#end for
    ]]></command>
    <inputs>
        <param name="inputs" type="data" optional="false" collection_type="list" label="McVine Input"/>
        <param name="nproc" type="integer" label="Number of Processes" value="1"/>
        <param name="ncount" type="integer" label="Number of counts" value="1"/>
    </inputs>
    <outputs>
        <data format="txt" name="output" label="Console output"></data>
    </outputs>
    <help><![CDATA[
        **MCVine**

        This is a Galaxy tool for MCVine.

        For more information, see the repository: https://code.ornl.gov/ndip/tool-sources/spectroscopy/sunny
    ]]></help>
</tool>
