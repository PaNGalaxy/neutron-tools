<tool id="neutrons_usans" name="USANS"  profile="22.05" version="0.1.0">
  <description></description>
    <requirements>
        <container type="docker">code.ornl.gov:4567/ndip/tool-sources/sans-data-reduction/usans-reduction:0.1.0</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        mkdir reduced &&
        #if $input_mode.input_mode_folder == 'true':
            python /reduction/reduce.py $input_config $input_mode.input_folder reduced >$output 2>&1
        #else
            mkdir $_GALAXY_JOB_TMP_DIR/input &&
            unzip $input_archive -d $_GALAXY_JOB_TMP_DIR/input 2>$output &&
            python /reduction/reduce.py $input_config $_GALAXY_JOB_TMP_DIR/input reduced >$output 2>&1 ;
            rm -rf input
        #end if
    ]]></command>
    <inputs>
        <conditional name="input_mode">
            <param name="input_mode_folder" type="boolean" truevalue="true" falsevalue="false" checked="no" label="Use data from an experiment folder" help=""/>
            <when value="true">
                <param name="input_folder" type="text" optional="false" label="Experiment folder"/>
            </when>
            <when value="false">
                <param name="input_archive" type="data" format="zip" optional="false" label="A zip file with input data"/>
            </when>
        </conditional>
        <param name="input_config" type="data" format="csv,txt" optional="false" label="config file"/>
    </inputs>
    <outputs>
        <collection type="list" name="output_collection" label="USANS output">
            <discover_datasets pattern="__designation_and_ext__" directory="reduced" />
        </collection>
        <data format="txt" name="output" label="USANS console output">
        </data>
    </outputs>
    <help><![CDATA[
        USANS data reduction tool
]]></help>
</tool>

