<tool id="neutrons_remote_command" name="remote command"  profile="22.05" version="0.2.0" python_template_version="3.5">
    <requirements>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        echo -n 'hostname: ' > '$output1' &&
        hostname >> '$output1' &&
        \${GALAXY_COMMAND_PREFIX} $command >> '$output1'
    ]]></command>
    <inputs>
        <param name="command" type="select" display="radio" label="Select Remote Command" help="a command to be executed on remote worker node">
            <option value="uptime" selected="true">uptime</option>
            <option value="lscpu">lscpu</option>
            <option value="hostname">hostname</option>
        </param>
    </inputs>
    <outputs>
        <data name="output1" format="txt" />
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
