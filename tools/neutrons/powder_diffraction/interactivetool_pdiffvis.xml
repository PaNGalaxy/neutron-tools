<tool id="pdiffvis" nova_category="powder-diffraction" tool_type="interactive"  name="PDiffVis" version="0.4.18" profile="22.01">
    <description>PDiffVis - Powder Diffraction Visualization Tools</description>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/ndip/tool-sources/powder-diffraction/pdiffvis:0.4.18</container>
    </requirements>
    <entry_points>
        <entry_point name="app entry" label="app_entry" requires_domain="False" requires_path_in_url="True">
            <port>8081</port>
        </entry_point>
    </entry_points>
    <environment_variables>
        <environment_variable name="GALAXY_URL">$__galaxy_url__</environment_variable>
        <environment_variable name="GALAXY_API_KEY" inject="api_key"/>
        <environment_variable name="HISTORY_ID">$__history_id__</environment_variable>
        <environment_variable name="EP_PATH" inject="entry_point_path_for_label">app_entry</euesnvironment_variable>
        <environment_variable name="OIDC_ID_TOKEN_AZURE" inject="oidc_id_token_azure"/>
        <environment_variable name="OIDC_ID_TOKEN_PINGFED" inject="oidc_id_token_pingfed"/>
    </environment_variables>
     <command><![CDATA[
        export USER_OIDC_TOKEN=\${OIDC_ID_TOKEN_AZURE-\${OIDC_ID_TOKEN_PINGFED}} &&
        supervisord > >(tee -a $output) 2> >(tee -a $output >&2)

    ]]></command>
    <outputs>
        <data format="txt" name="output" label="Console output"></data>
    </outputs>
    <help><![CDATA[
        **PDiffVis**

        This is a Galaxy tool for PDiffVis.

        For more information, see the repository: https://code.ornl.gov/ndip/tool-sources/powder-diffraction/pdiffvis
    ]]></help>
</tool>
