<tool id="neutrons_trame_biosans" nova_category="small-angle-neutron-scattering" tool_type="interactive" name="Bio-SANS Data Reduction" profile="22.05" version="0.14.0">
    <description></description>
    <creator>
        <person name="Alan Hicks"/>
        <organization url="https://www.ornl.gov/" name="ORNL"/>
    </creator>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/ndip/tool-sources/small-angle-neutron-scattering/sans-reduction-gui/biosans:bin-72eb0dc8c4d6e1a6a0e8aaf1dbb231856f66d1a3
        </container>
    </requirements>
    <entry_points>
        <entry_point name="Trame Bio-SANS" label="biosans" requires_domain="False" requires_path_in_url="True">
            <port>8081</port>
        </entry_point>
    </entry_points>
    <environment_variables>
        <environment_variable name="GALAXY_URL">$__galaxy_url__</environment_variable>
        <environment_variable name="GALAXY_API_KEY" inject="api_key"/>
        <environment_variable name="HISTORY_ID">$__history_id__</environment_variable>
        <environment_variable name="EP_PATH" inject="entry_point_path_for_label">biosans</environment_variable>
        <environment_variable name="INSTRUMENT">biosans</environment_variable>
    </environment_variables>
    <command detect_errors="exit_code"><![CDATA[
        #if $config:
            export CONFIG=$config &&
        #end if
        supervisord > >(tee -a $output) 2> >(tee -a $output >&2)
    ]]></command>
    <inputs>
        <param name="config" type="data" optional="true" label="Config file"/>
    </inputs>
    <outputs>
        <data format="txt" name="output" label="Console output">
        </data>
    </outputs>
    <help><![CDATA[
        Bio-SANS data reduction Trame application.
    ]]></help>
</tool>
