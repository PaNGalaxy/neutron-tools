<tool id="neutrons_trame_ctscan" tool_type="interactive" name="CT Scan Visualizer" profile="22.05" version="0.1.0">
    <description></description>
    <creator>
        <person name="John Duggan" />
        <organization url="https://www.ornl.gov/" name="ORNL"/>
    </creator>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/ndip/trame-apps/ctscan_viz:demo2
        </container>
    </requirements>
    <entry_points>
        <entry_point name="Trame CT Scan Viz" label="ctscan" requires_domain="False" requires_path_in_url="True">
            <port>8081</port>
        </entry_point>
    </entry_points>
    <environment_variables>
        <environment_variable name="GALAXY_URL">$__galaxy_url__</environment_variable>
        <environment_variable name="GALAXY_API_KEY" inject="api_key"/>
        <environment_variable name="HISTORY_ID">$__history_id__</environment_variable>
        <environment_variable name="EP_PATH" inject="entry_point_path_for_label">ctscan</environment_variable>
    </environment_variables>
    <command detect_errors="exit_code"><![CDATA[
        set -m;
        python -m ctscan_viz
        --galaxy-history-id \$HISTORY_ID --host 0.0.0.0 --server timeout=0
        > >(tee -a $output) 2> >(tee -a $output >&2) &
        until wget -o /dev/null -O /dev/null http://localhost:8080; do sleep 0.1; done &&
        bash /prepare_nginx.sh &&
        fg
    ]]></command>
    <outputs>
        <data format="txt" name="output" label="Console output">
        </data>
    </outputs>
    <help><![CDATA[
        Starts CT Scan Visualizer Trame application.
    ]]></help>
</tool>
