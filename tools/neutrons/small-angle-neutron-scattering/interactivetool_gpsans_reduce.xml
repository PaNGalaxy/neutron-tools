<tool id="nova-neutrons-trame-gpsans-prototype" tool_type="interactive" name="GP-SANS Data Reduction" profile="22.05" version="1.1.0-dev0">
    <description></description>
    <creator>
        <person name="Yingrui Shang"/>
        <organization url="https://www.ornl.gov/" name="ORNL"/>
    </creator>
    <requirements>
        <container type="docker" shell="/bin/bash">savannah.ornl.gov/ndip/tool-sources/small-angle-neutron-scattering/sans-reduction-gui/gpsans:1.1.0-dev0
        </container>
    </requirements>
    <entry_points>
        <entry_point name="Trame GP-SANS" label="gpsans" requires_domain="False" requires_path_in_url="True">
            <port>8081</port>
        </entry_point>
    </entry_points>
    <environment_variables>
        <environment_variable name="GALAXY_URL">$__galaxy_url__</environment_variable>
        <environment_variable name="GALAXY_API_KEY" inject="api_key"/>
        <environment_variable name="HISTORY_ID">$__history_id__</environment_variable>
        <environment_variable name="EP_PATH" inject="entry_point_path_for_label">gpsans</environment_variable>
        <environment_variable name="INSTRUMENT">gpsans</environment_variable>
        <environment_variable name="OIDC_ID_TOKEN_AZURE" inject="oidc_id_token_azure"/>
        <environment_variable name="OIDC_ID_TOKEN_PINGFED" inject="oidc_id_token_pingfed"/>
    </environment_variables>
    <command detect_errors="exit_code"><![CDATA[
        export USER_OIDC_TOKEN=\${OIDC_ID_TOKEN_AZURE-\${OIDC_ID_TOKEN_PINGFED}} &&
        #if $config:
            export CONFIG=$config &&
        #end if
        supervisord > >(tee -a $output) 2> >(tee -a $output >&2)
    ]]></command>
    <inputs>
        <param name="config" type="data" optional="true" label="Config file"/>
    </inputs>
    <outputs>
        <data format="txt" name="output" label="Console output">
        </data>
    </outputs>
    <help><![CDATA[
        GP-SANS data reduction Trame application.
    ]]></help>
</tool>
